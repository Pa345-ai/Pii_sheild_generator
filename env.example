# PII-Shield Engine Configuration
# Copy this file to .env and customize as needed

# API Settings
API_TITLE=PII-Shield Engine
API_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# CORS Settings
# CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# Detection Settings
DEFAULT_CONFIDENCE_THRESHOLD=0.7
ENABLE_CONTEXT_VALIDATION=true
ENABLE_STRICT_VALIDATION=true
COLLECT_STATISTICS=true

# Performance Settings
MAX_TEXT_LENGTH=1000000
BATCH_SIZE_LIMIT=100
REQUEST_TIMEOUT=30

# Logging Settings
LOG_LEVEL=INFO
# LOG_FILE=/var/log/pii-shield/app.log

# Security Settings (Optional)
ENABLE_RATE_LIMITING=false
RATE_LIMIT_REQUESTS=100
ENABLE_API_KEY=false
# API_KEY=your-secure-api-key-here

# Feature Flags
ENABLE_BATCH_ENDPOINT=true
ENABLE_PROXY_ENDPOINT=true
ENABLE_STATS_ENDPOINT=true

# Detection Configuration
DETECTION_CREDIT_CARD_THRESHOLD=0.90
DETECTION_SSN_THRESHOLD=0.95
DETECTION_EMAIL_THRESHOLD=0.99
DETECTION_PHONE_THRESHOLD=0.80
DETECTION_NAME_THRESHOLD=0.70
DETECTION_ADDRESS_THRESHOLD=0.75

# Validation Settings
DETECTION_VALIDATE_CREDIT_CARDS=true
DETECTION_VALIDATE_SSN=true
DETECTION_VALIDATE_EMAILS=true
DETECTION_VALIDATE_PHONES=true

# Masking Configuration
MASKING_DEFAULT_STRATEGY=PARTIAL
MASKING_SHOW_LAST_N_DIGITS=4
MASKING_SHOW_FIRST_INITIAL=true
MASKING_PRESERVE_DOMAIN=true
